// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Task {
  id          String   @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  completed   Boolean  @default(false)
}

model Settings {
  id            String  @id @default("default")
  minDaysAhead  Int     @default(1)  // 1 = tomorrow
  maxDaysAhead  Int     @default(4)  // 4 days from now
  earliestHour  Int     @default(8)  // 8am
  latestHour    Int     @default(23) // 11pm
}